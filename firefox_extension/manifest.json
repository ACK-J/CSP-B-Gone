{
  "manifest_version": 2,
  "name": "CSP Checker",
  "version": "1.0",
  "description": "Displays the content security policy of the current site to the user.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{f752c21f-800e-4c0c-86d0-ce4354995078}"
    }
  }
}

